  "definitions": {
    "jobRatio": {
      "title": "有効求人倍率",
      "unit": "倍",
      "description": "公共職業安定所の有効求人数を有効求職者数で割った指標。1 を超えると求職者より求人数が多い状態。",
      "calculation": "有効求人数 ÷ 有効求職者数",
      "recommendedActions": [
        "倍率が 1.5 倍を超える業種では採用活動におけるオファー承諾率向上施策が必須",
        "倍率が低下している場合は求人要件や報酬水準を見直す"
      ]
    },
    "salaryMedian": {
      "title": "中央値年収",
      "unit": "万円",
      "description": "賃金構造基本統計調査をベースに業種×経験別の中央値を推計。人材紹介各社のデータで補正。",
      "calculation": "統計調査の中央値 × 地域係数 × 経験補正",
      "recommendedActions": [
        "ターゲット人材の中央値±10% を提示すると内定承諾率が安定",
        "経験レンジごとの目安を提示し、給与テーブルの正当性を説明"
      ]
    },
    "successRate": {
      "title": "転職成功率",
      "unit": "%",
      "description": "転職希望者のうち内定〜入社に至った割合。サンプルは主要求人メディアと人材紹介会社の合算。",
      "calculation": "入社者数 ÷ 選考完了者数",
      "recommendedActions": [
        "成功率が 60% を超える層は 2 社以上の比較検討が前提",
        "40 代以上は専門性証明（資格・成果）の提示で成功率を底上げ"
      ]
    },
    "newOpenings": {
      "title": "新規求人数",
      "unit": "件/週",
      "description": "主要 8 求人メディアと自社求人データを集計し、4 週移動平均で表示。地域別の需給バランス確認に利用。",
      "calculation": "新規掲載求人数（週次）を 4 週移動平均",
      "recommendedActions": [
        "新規求人が増加する地域では告知タイミングを合わせる",
        "減少している場合は社内リファラルやダイレクトソーシングを強化"
      ]
    }
  },
